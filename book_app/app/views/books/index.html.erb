<% @page_title = "All Books" %>

<div class="books index">
  <h2>Books</h2>

  <table class="listing" summary="Book list">
    <tr class="header">
    <%= link_to('Add New Book',new_book_path, :class =>'action new') %><br />
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td class="actions">
      <%= link_to('View Book', "books/#{book.id}",:class => 'action show' ) %>
      <%= link_to('Update Book', edit_book_path(book),:class => 'action edit') %>
      <%= link_to('Delete Book',delete_book_path(book), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
